<launch>

  <arg name="pkg_name" default="base_station"/>

  <!-- Configure your radio authentication info as needed -->
  <node name="radio_monitor" pkg="nova_common" type="radio_monitor.py" output="screen">  
    <param name="pkg_name" value="$(arg pkg_name)"/>
    <rosparam>
        radio_0:
          host: '192.168.1.201'
          user: 'ubnt'
          pw:   'rover'  
          
        radio_1:  
          host: '127.0.0.1'
          user: 'ubnt'
          pw:   'rover'  
    </rosparam>    
  </node>

</launch>

